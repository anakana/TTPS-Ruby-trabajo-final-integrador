<h1> Gestion de Turnos</h1>
<% if Current.user && Current.user.has_permission('Cliente') %>
  <div class="col col-lg-2">
    <%= button_to "Solicitar nuevo turno", request_appointment_path, method: :get, class: "btn btn-primary" %>
  </div>
  <br>
  <div class="col col-lg-2">
    <%= button_to "Turnos Pendientes", appointments_path, method: :get, class: "btn btn-primary" %>
  </div>
  <br>
  <div class="col col-lg-2">
    <%= button_to "Historial de Turnos", appointments_history_path, method: :get, class: "btn btn-primary" %>
  </div>
  <br>
<% end %>

<% if Current.user && Current.user.has_permission('Personal Bancario') %>
  <% @appointments.each do |appointment| %>
    <div class="mb-3">
      <%= link_to appointment.date.strftime("Turno fecha: %m/%d/%Y"), appointment %>
    </div>
  <% end %>

<% end %>